<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nero.hua.dao.NewsDetailDAO">

  <resultMap id="BaseResultMap" type="com.nero.hua.bean.NewsDetailDO">
    <id column="id" property="id" />
    <result column="create_time" property="createTime" />
    <result column="update_time" property="updateTime" />
    <result column="create_user_id" property="createUserId" />
    <result column="update_user_id" property="updateUserId" />
    <result column="detail" property="detail" />
  </resultMap>

  <sql id="Base_Column_List">
    id, create_time, update_time, create_user_id, update_user_id, detail
  </sql>

  <insert id="insert" parameterType="com.nero.hua.bean.NewsDetailDO" useGeneratedKeys="true" keyProperty="id">
    insert into
      news_detail
      (create_time, update_time,
        create_user_id, update_user_id, detail
      )
    values
      (#{createTime}, #{updateTime},
        #{createUserId}, #{updateUserId}, #{detail}
      )
  </insert>

  <delete id="deleteById" parameterType="java.lang.Long">
    delete from
      news_detail
    where
      id = #{id}
  </delete>

  <update id="updateById" parameterType="com.nero.hua.bean.NewsDetailDO">
    update news_detail
    <set>
      <if test="newsDetailDO.createTime != null">
        create_time = #{newsDetailDO.createTime},
      </if>
      <if test="newsDetailDO.updateTime != null">
        update_time = #{newsDetailDO.updateTime},
      </if>
      <if test="newsDetailDO.createUserId != null">
        create_user_id = #{newsDetailDO.createUserId},
      </if>
      <if test="newsDetailDO.updateUserId != null">
        update_user_id = #{newsDetailDO.updateUserId},
      </if>
      <if test="newsDetailDO.detail != null">
        detail = #{newsDetailDO.detail},
      </if>
    </set>
    where
      id = #{newsDetailDO.id}
  </update>

  <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select
      <include refid="Base_Column_List" />
    from
      news_detail
    where
      id = #{id}
  </select>

</mapper>
