<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nero.hua.dao.NewsDAO">

  <resultMap id="BaseResultMap" type="com.nero.hua.bean.NewsDO">
    <id column="id" property="id" />
    <result column="create_time" property="createTime" />
    <result column="update_time" property="updateTime" />
    <result column="create_user_id" property="createUserId" />
    <result column="update_user_id" property="updateUserId" />
    <result column="title" property="title" />
    <result column="cover" property="cover" />
    <result column="detail_id" property="detailId" />
  </resultMap>

  <sql id="Base_Column_List">
    id, create_time, update_time, create_user_id, update_user_id, title, cover, detail_id
  </sql>

  <insert id="insert" parameterType="com.nero.hua.bean.NewsDO" useGeneratedKeys="true" keyProperty="id">
    insert into
      news
      (create_time, update_time,
      create_user_id, update_user_id, title,
      cover, detail_id)
    values
      (#{createTime}, #{updateTime},
      #{createUserId}, #{updateUserId}, #{title},
      #{cover}, #{detailId})
  </insert>

  <delete id="deleteById" parameterType="java.lang.Long">
    delete from
      news
    where
      id = #{id}
  </delete>

  <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select 
      <include refid="Base_Column_List" />
    from
      news
    where
      id = #{id}
  </select>

  <update id="updateById" parameterType="com.nero.hua.bean.NewsDO">
    update news
    <set>
      <if test="newsDO.createTime != null">
        create_time = #{newsDO.createTime},
      </if>
      <if test="newsDO.updateTime != null">
        update_time = #{newsDO.updateTime},
      </if>
      <if test="newsDO.createUserId != null">
        create_user_id = #{newsDO.createUserId},
      </if>
      <if test="newsDO.updateUserId != null">
        update_user_id = #{newsDO.updateUserId},
      </if>
      <if test="newsDO.title != null">
        title = #{newsDO.title},
      </if>
      <if test="newsDO.cover != null">
        cover = #{newsDO.cover},
      </if>
      <if test="newsDO.detailId != null">
        detail_id = #{newsDO.detailId},
      </if>
    </set>
    where
      id = #{newsDO.id}
  </update>

  <select id="selectCountByPage" resultMap="BaseResultMap">
    select
      count(1)
    from
      news
    where
      1 = 1
      <if test="keyword != null">
        and title like #{keyword}
      </if>
  </select>

  <select id="selectListByPage" resultMap="BaseResultMap">
    select
      <include refid="Base_Column_List" />
    from
      news
    where
      1 = 1
      <if test="keyword != null">
        and title like #{keyword}
      </if>
    order by update_time desc
    limit
      #{begin}, #{pageSize}
  </select>

</mapper>
